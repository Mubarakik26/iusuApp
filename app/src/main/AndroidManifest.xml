<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iusuapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--android:roundIcon="@mipmap/ic_launcher_round"-->
    <application
        android:allowBackup="true"
        android:icon="@drawable/iusu_app_logo"
        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/Theme.IusuApp">
        <activity
            android:name=".activity.ComplaintDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AddEditEventActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AddEditNewsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AddEditAnnouncement"
            android:exported="false" />
        <activity
            android:name=".activity.AnnouncementDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.EventsDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.NewsItemDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CreateAccountActivity"
            android:exported="false" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activity.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>